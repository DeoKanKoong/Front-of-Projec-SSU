{{>layouts/header}}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">팀 모집 게시판</h1>
        </div>
        <div class="col text-end">
            <a href="/articles/new" class="btn btn-primary">게시글 작성하기</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">제목</th>
                    <th scope="col">내용</th>
                </tr>
                </thead>
                <tbody>
                {{#articleList}}
                    <tr>
                        <th>{{id}}</th>
                        <td><a href="/articles/{{id}}" class="text-decoration-none">{{title}}</a></td>
                        <td>{{content}}</td>
                    </tr>
                {{/articleList}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-end">
        <a href="/" class="btn btn-secondary">홈으로 돌아가기</a>
    </div>
</div>

{{>layouts/footer}}
